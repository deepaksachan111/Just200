<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">

    <TextView
        android:textColor="@color/blueIndigo"
        android:textSize="24dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <TextView

        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/blueIndigo"
        android:textSize="18dp"
        android:text="Congratulations !!!!!!!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txt_register_name"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:text="Now you are registered with us..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView

            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:text="Member Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_register_name2"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:text=" "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView

            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:text="Member ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_register_loginId"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:text=" "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView

            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:text="Sponsor By"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_register_sponserid"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:text=" "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>