<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



    <TextView
        android:padding="10dp"
        android:background="@color/whatapptheme1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:gravity="center"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:text="Upgradation"/>

    <LinearLayout
        android:layout_margin="2dp"
        android:background="@drawable/edt_login_bg"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#000"
                android:layout_weight=".7"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sending Amount"/>

            <TextView

                android:textColor="#000"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="::"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_sending_amount"
                android:textColor="#000"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#000"
                android:layout_weight=".7"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Receiving Amount"/>

            <TextView
                android:textColor="#000"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="::"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_receving_amount"
                android:textColor="#000"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#000"
                android:layout_weight=".7"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Eearning Amount"/>

            <TextView
                android:textColor="#000"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="::"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_earning_amount"
                android:textColor="#000"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""/>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#000"
                android:layout_weight=".7"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Earning Level"/>

            <TextView
                android:textColor="#000"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="::"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_erning_level"
                android:textColor="#000"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout

        android:orientation="vertical"
        android:layout_margin="2dp"
        android:background="@drawable/edit_text_design"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView

            android:padding="10dp"
            android:background="@color/colorPrimary"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:text="Starter Plan Income"/>

        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_upgrade_staterplanlevel_type"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@android:color/holo_red_dark"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Current Level 4"/>



                <Button
                    android:visibility="gone"
                    android:id="@+id/btn_upgrade_starterplan"
                    android:textColor="#fff"
                    android:drawableRight="@android:drawable/checkbox_on_background"
                    android:background="@drawable/button_bg"
                    android:layout_weight=".5"
                    android:text="Update"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

        </LinearLayout>



    </LinearLayout>


   <!-- <.............................end of starter plan;;;;;;;;;;;;;;;;;;;;;;;;;;-->

    <LinearLayout

        android:orientation="vertical"
        android:layout_margin="2dp"
        android:background="@drawable/edit_text_design"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView

            android:padding="10dp"
            android:background="@android:color/holo_orange_light"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:text="Middle Plan Income"/>

        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_upgrade_middleplanlevel_type"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@android:color/holo_red_dark"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Upgrade for level 2"/>



            <Button
                android:visibility="gone"
                android:id="@+id/btn_upgrade_middleplan"
                android:textColor="#fff"
                android:drawableRight="@android:drawable/checkbox_on_background"
                android:background="@drawable/button_bg"
                android:layout_weight=".5"
                android:text="Update"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </LinearLayout>


  <!--  <.....................................................end middleplaan>>>>>>>>>>>>>>>>>>-->

    <LinearLayout

        android:orientation="vertical"
        android:layout_margin="2dp"
        android:background="@drawable/edit_text_design"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView

            android:padding="10dp"
            android:background="@android:color/holo_purple"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:text="End Plan Income"/>

        <LinearLayout
            android:layout_marginBottom="50dp"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_upgrade_end_planlevel_type"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@android:color/holo_red_dark"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Current Level [None]"/>



            <Button
                android:id="@+id/btn_upgrade_endplan"
                android:visibility="gone"
                android:textColor="#fff"
                android:drawableRight="@android:drawable/checkbox_on_background"
                android:background="@drawable/button_bg"
                android:layout_weight=".5"
                android:text="Update"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </LinearLayout>



        </LinearLayout>
    </ScrollView>

</LinearLayout>