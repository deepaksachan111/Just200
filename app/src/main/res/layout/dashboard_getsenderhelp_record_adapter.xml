<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:background="#000"
        android:layout_width="fill_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:background="@android:color/holo_purple"

        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight=".2"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="1"
            android:id="@+id/tv_dash_adapter_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="#000"
            android:layout_width="1dp"
            android:layout_height="fill_parent"/>

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="TopId"
                android:id="@+id/tv_dash_adapter_topid"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <View
                android:background="#000"
                android:layout_width="fill_parent"
                android:layout_height="1dp"/>

            <TextView
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="name"
                android:id="@+id/tv_dash_adapter_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <View
                android:background="#000"
                android:layout_width="fill_parent"
                android:layout_height="1dp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="mobile no"
                android:id="@+id/tv_dash_adapter_mobileno"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            android:background="#000"
            android:layout_width="1dp"
            android:layout_height="fill_parent"/>

        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight=".5"
            android:text="Amount"
            android:id="@+id/tv_dash_adapter_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <View
            android:background="#000"
            android:layout_width="1dp"
            android:layout_height="fill_parent"/>



        <LinearLayout
            android:layout_weight=".1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <Button
                android:padding="5dp"
                android:textColor="@color/white"
                android:layout_marginTop="2dp"
                android:background="#559720"
                android:drawableLeft="@android:drawable/checkbox_on_background"
                android:textSize="10dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="Upload"
                android:id="@+id/btn_dash_reciver_adapter_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />






            <Button
                android:textColor="@color/white"
                android:layout_marginTop="3dp"
                android:padding="5dp"
                android:background="#2F86F2"
                android:textSize="10dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="View Detail"
                android:id="@+id/btn_dash_adapter_viewDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
    <View
        android:background="#000"
        android:layout_width="fill_parent"
        android:layout_height="1dp"/>


    <LinearLayout
        android:padding="5dp"
        android:background="#57B5E3"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        <TextView

            android:text="Trans ID :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/red"
            android:text=" "
            android:id="@+id/tv_dash_adapter_transid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView

            android:text="Start Date :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/red"
            android:text=" "
            android:id="@+id/tv_dash_adapter_start_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <TextView

            android:text="Remaining time :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/red"
            android:text=" "
            android:id="@+id/tv_dash_adapter_Remainingtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>